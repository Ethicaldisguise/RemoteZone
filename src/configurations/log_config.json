{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "default": {
            "format": "%(levelname)-8s %(name)-20s %(funcName)-25s - %(message)s"
        },
        "detailed": {
            "format": "%(asctime)s - %(levelname)-8s %(name)-30s %(funcName)-25s - %(message)s"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "default",
            "level": "INFO"
        },
        "file": {
            "class": "logging.FileHandler",
            "filename": ".",
            "formatter": "detailed",
            "level": "DEBUG"
        }
    },

    "loggers": {
        "": {
            "handlers": ["console", "file"],
            "level": "DEBUG"
        },
        "main": {
            "handlers": ["console"],
            "level": "INFO",
            "propagate": false
        }
    }
}
